{
  "manifest_version": 2,
  "name": "Syntaxic",
  "version": "0.1.4",
  "permissions": [
    "webNavigation",
    "tabs",
    "http://hackforums.net/showthread.php?tid=*",
    "storage"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": [
        "http://hackforums.net/showthread.php?tid=*"
      ],
      "js": ["jquery-2.2.3.min.js", "highlight.min.js", "content.js"]
    }
  ],
  "browser_action": {
    "default_popup": "popup.html"
  }
}
